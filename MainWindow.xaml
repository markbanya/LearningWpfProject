<Window x:Class="LearningWpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWpfProject"
        xmlns:helpers="clr-namespace:LearningWpfProject.Helper" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Width="75" Height="30" Margin="0, 0, 5, 0"
                    Command="{Binding AddItemCommand}"
                    CommandParameter="{Binding SelectedItem}"/>
            <Button Content="Delete" Width="75" Height="30" Margin="0, 0, 5, 0"
                    Command="{Binding DeleteItemCommand}"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <DataGrid 
                CanUserAddRows="False" 
                CanUserDeleteRows="False"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                AutoGenerateColumns="False"
                Margin="0,50,0,-380">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*"/>
                    <DataGridTextColumn Header="Completed" Binding="{Binding IsCompleted}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel x:Name ="myStackPanel"  Grid.Column="1" Margin="0,50,0,-226">
                <Label Content="Task Title"/>
                <TextBox Margin="5, 0, 5, 15" 
                     Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Task Description"/>
                <TextBox Margin="5, 0, 5, 15" 
                       Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Completed"/>
                <CheckBox Margin="5, 0, 5, 15" IsChecked="{Binding NewIsCompleted, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Width="120" Height="30"
                  ItemsSource="{Binding StorageOptions}"
                  SelectedItem="{Binding SelectedStorageType, Mode=TwoWay}"
                  HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
