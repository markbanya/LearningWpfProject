<Window x:Class="LearningWpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWpfProject"
        xmlns:helpers="clr-namespace:LearningWpfProject.Helper" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Width="75" Height="30" Margin="0, 0, 5, 0"
                    Command="{Binding AddCommand}"
                    CommandParameter="{Binding SelectedItem}"/>
            <Button Content="Delete" Width="75" Height="30" Margin="0, 0, 5, 0"
                    Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedItem}"/>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBox Width="200" Height="30" 
                Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <DataGrid 
                CanUserAddRows="False" 
                CanUserDeleteRows="False"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                AutoGenerateColumns="False"
                Margin="0,50,0,-380">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*"/>
                    <DataGridTextColumn Header="Completed" Binding="{Binding IsCompleted}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel x:Name ="myStackPanel"  Grid.Column="1" Margin="0,50,0,-280">
                
                <Label Content="Task Title"/>
                <TextBox Margin="5, 0, 5, 15" 
                     Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Task Description"/>
                <TextBox Margin="5, 0, 5, 15" 
                       Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Completed"/>
                <CheckBox Margin="5, 0, 5, 15" IsChecked="{Binding NewIsCompleted, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="DB Selection"/>
                <ComboBox Margin="5, 0, 5, 15" 
                         ItemsSource="{Binding AvailableStorage}"
                         SelectedItem="{Binding ActiveStorage}">
                        <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>    
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
